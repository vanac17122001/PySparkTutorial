   ],
   "source": [
    "sc = SparkContext.getOrCreate()\n",
    "num = sc.accumulator(10)\n",
    "\n",
    "def f(x):\n",
    "    global num\n",
    "    num+=x\n",
    "\n",
    "rdd = sc.parallelize([20,30,40,50])\n",
    "rdd.foreach(f)\n",
    "final = num\n",
    "print(\"Accumulated value is -> %s\" % (final))"
   ]
  }
